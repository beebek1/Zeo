<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zeo">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Zeo">

        <!-- Splash screen as launcher -->
        <activity
            android:name=".view.Splash"
            android:exported="true"
            android:label="@string/title_activity_splash"
            android:theme="@style/Theme.Zeo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities -->
        <activity
            android:name=".view.Dashboard"
            android:exported="true"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/Theme.Zeo" />

        <activity
            android:name=".view.ForgetPassword"
            android:exported="true"
            android:label="@string/title_activity_forget_password"
            android:theme="@style/Theme.Zeo" />

        <activity
            android:name=".view.Registration"
            android:exported="true"
            android:label="@string/title_activity_registration"
            android:theme="@style/Theme.Zeo" />

        <activity
            android:name=".view.Login"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Zeo" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Zeo" />

    </application>

</manifest>